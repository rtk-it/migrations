[core]
	safecrlf = true
	eol = lf
	autocrlf = input
	whitespace = fix,-indent-with-non-tab,trailing-space,space-before-tab,cr-at-eol
[merge]
	conflictstyle = diff3
[color]
	ui = auto
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
